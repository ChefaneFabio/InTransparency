# Environment Configuration
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/intransparency
DB_PASSWORD=password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# API Configuration
API_PORT=3001
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your-ai-service-api-key
OPENAI_API_KEY=your-openai-api-key

# Cloudflare R2 Configuration (Recommended - cheaper than S3, zero egress fees)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=intransparency
R2_PUBLIC_URL=https://cdn.yourdomain.com
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# AWS S3 Configuration (Alternative to R2)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=intransparency-uploads

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@intransparency.com

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-min-32-characters-change-in-production

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Logging Configuration
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=5

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
BCRYPT_ROUNDS=12

# Production Deployment URLs (for Render/Vercel)
PROD_API_URL=https://your-api-domain.onrender.com
PROD_FRONTEND_URL=https://your-app.vercel.app
PROD_AI_SERVICE_URL=https://your-ai-service.onrender.com

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Monitoring and Analytics
ENABLE_ANALYTICS=true
ANALYTICS_API_KEY=your-analytics-key

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_REAL_TIME_FEATURES=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_FILE_UPLOADS=true

# Development Configuration
DEBUG_MODE=false
VERBOSE_LOGGING=false