{
  "name": "intransparency-api",
  "version": "1.0.0",
  "description": "InTransparency Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server-basic.ts",
    "build": "tsc && npm run copy-files",
    "start": "node dist/server.js",
    "copy-files": "cp -r src/public dist/ || echo 'No public files to copy'",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:rollback": "knex migrate:rollback"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.11.0",
    "validator": "^13.11.0",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "ioredis": "^5.3.2",
    "socket.io": "^4.7.4",
    "axios": "^1.6.2",
    "multer": "^1.4.5-lts.1",
    "aws-sdk": "^2.1506.0",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "handlebars": "^4.7.8",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "express-validator": "^7.0.1",
    "class-variance-authority": "^0.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.16",
    "@types/helmet": "^4.0.0",
    "@types/compression": "^1.7.5",
    "@types/morgan": "^1.9.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8",
    "ts-jest": "^29.1.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}